<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical" android:layout_width="match_parent"    android:layout_height="match_parent">    <FrameLayout android:id="@+id/map"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        />    <LinearLayout        android:baselineAligned="false"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight=".25"        android:orientation="horizontal">        <TextView            android:text="Northbound Trains"            android:textColor="#001998"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center_vertical|center" />        <TextView            android:text="Southbound Trains"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:textColor="#001998"            android:gravity="center_vertical|center" />        </LinearLayout>    <LinearLayout        android:baselineAligned="false"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="2"        android:orientation="horizontal">        <ListView            android:orientation="vertical"            android:id="@+id/northlv"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="2"/>        <ListView            android:orientation="vertical"            android:id="@+id/southlv"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="2"/>    </LinearLayout></LinearLayout>